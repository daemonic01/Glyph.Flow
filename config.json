{
    "version": "0.1.0a9",
    "paths": {
        "data": "data/node_data.json",
        "help": "assets/help.txt",
        "messages": "loc/en/messages.json",
        "syslog": "logs/app.log",
        "export": "export/"
    },
    "node_properties": {
        "short_desc_length_limit": 100,
        "full_desc_length_limit": 300
    },
    "default_schema": [
        "Project",
        "Phase",
        "Task",
        "Subtask"
    ],
    "custom_schema": [
        "Project",
        "Phase",
        "Task",
        "Subtask"
    ],
    "logging": true,
    "log": {
        "rotate": {
            "max_bytes": 262144,
            "backup_count": 5
        }
    },
    "autosave": true,
    "assume_yes": false,
    "command_history_maxlen": 50,
    "undo_redo_limit": 50
}