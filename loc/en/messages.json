{
  "meta": {
    "version": "1.0",
    "lang": "en"
  },

  "system": {
    "startup": {
      "level": "INFO",
      "badge": "INFO",
      "color": "#DDD6B8",
      "text": "Node test environment initialized. Active version: {version} | Autosave: {autosave}"
    },
    "startup_hint": {
        "level": "INFO",
      "badge": "INFO",
      "color": "#DDD6B8",
      "text": "Type 'help' to see all commands. Type 'sample' to generate a demo tree."
    },
    "unknown_command": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Unknown command: {cmd}"
    },
    "cmd_input": {
      "level": "INFO",
      "badge": "CMD",
      "color": "#DE5500",
      "text": "> {cmd}"
    },
    "autosave_done": {
      "level": "SUCCESS",
      "badge": "OK",
      "color": "green",
      "text": "Autosave done!"
    },
    "autosave_failed": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Autosave failed: {error}"
    },
    "config_save_done": {
      "level": "SUCCESS",
      "badge": "OK",
      "color": "green",
      "text": "Config saved."
    },
    "config_save_failed": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Config save failed: {error}"
    },
    "unexpected_error": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Unexpected error! Please create a new issue in the project's repository on GitHub! This would help me a lot. Thank you."
    }
  },
  "config": {
    "unknown_key": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Unknown key. Use: 'autosave', 'assume_yes'/'assume-yes', 'logging', or 'log'"
    },
    "invalid_value": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Invalid value for '{k}' key."
    },
    "no_change": {
      "level": "INFO",
      "badge": "INFO",
      "color": "#DDD6B8",
      "text": "No changes made on {setting}, value: {value}."
    },
    "set_success": {
      "level": "SUCCESS",
      "badge": "SUCCESS",
      "color": "green",
      "text": "Config changed: '{setting}': {value}"
    },
    "autosave_invalid_state": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Invalid input! Usage: autosave <on/off>"
    }
  },

  "file": {
    "sample_tree_created": {
      "level": "SUCCESS",
      "badge": "OK",
      "color": "green",
      "text": "Sample tree created."
    },
    "manual_save_completed":{
      "level": "SUCCESS",
      "badge": "OK",
      "color": "green",
      "text": "Manual save completed!"
    },
    "manual_save_failed":{
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Manual save failed! Error: {error}"
    },
    "save_success": {
      "level": "SUCCESS",
      "badge": "OK",
      "color": "green",
      "text": "Data saved to '{filename}'."
    },
    "no_data_to_save": {
      "level": "INFO",
      "badge": "INFO",
      "color": "#DDD6B8",
      "text": "No data to save."
    },
    "save_error": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Failed to save data: {error}"
    },
    "load_success": {
      "level": "SUCCESS",
      "badge": "OK",
      "color": "green",
      "text": "Data loaded from '{filename}'."
    },
    "load_error": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Failed to load data from '{filename}'. Failed to create a new file to receive data."
    },
    "no_data": {
      "level": "WARNING",
      "badge": "WARN",
      "color": "yellow",
      "text": "No data loaded."
    }
  },

  "clearall": {
    "clear_done": {
      "level": "SUCCESS",
      "badge": "OK",
      "color": "green",
      "text": "All nodes cleared."
    },
    "file_not_found": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "File not found."
    }
  },

  "undo_redo": {
    "undo_success": {
      "level": "SUCCESS",
      "badge": "OK",
      "color": "green",
      "text": "Undo successful."
    },
    "redo_success": {
      "level": "SUCCESS",
      "badge": "OK",
      "color": "green",
      "text": "Redo successful."
    },
    "undo_no_change": {
      "level": "WARNING",
      "badge": "WARN",
      "color": "red",
      "text": "Nothing to undo."
    },
    "redo_no_change": {
      "level": "WARNING",
      "badge": "WARN",
      "color": "red",
      "text": "Nothing to redo."
    }
  },

  "move": {
    "node_not_found": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "The node you want to move not found."
    },
    "move_root_error": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Main node cannot be moved."
    },
    "target_parent_not_found": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Target node not found."
    },
    "already_there": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "The node you want to move is already in the desired location."
    },
    "type_error": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Incorrect level. A node can only be placed under an object of the next higher level type."
    },
    "success": {
      "level": "SUCCESS",
      "badge": "SUCCESS",
      "color": "green",
      "text": "Move successful."
    }
  },


  "schema": {
    "set_success": {
      "level": "INFO",
      "badge": "INFO",
      "color": "cyan",
      "text": "Schema set to: {schema} (no data to update)"
    },
    "switch_success": {
      "level": "SUCCESS",
      "badge": "OK",
      "color": "green",
      "text": "Schema switched and node types updated to: {schema}"
    },
    "switch_default_success": {
      "level": "SUCCESS",
      "badge": "OK",
      "color": "green",
      "text": "Schema switched and node types updated to default: {schema}"
    },
    "length_mismatch": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Cannot switch schema: current tree depth = {depth}, new schema = {new_depth}"
    },
    "error": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Schema change error: {error}"
    }
  },

  "node": {
    "created_node": {
      "level": "SUCCESS",
      "badge": "OK",
      "color": "green",
      "text": "Created '{type}': {name} â†’ ID: {id}"
    },
    "create_invalid": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Invalid type: cannot create '{type}' under '{parent_type}' (expected: '{expected}')"
    },
    "create_parent_not_found": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Parent ID '{parent_id}' not found."
    },
    "create_root_node_type_error": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Root node must be of type '{expected}', not '{type}'"
    },
    "past_date_error": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Deadline cannot be in the past."
    },
    "deadline_too_early": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Deadline cannot be later than the element at the level above it."
    },
    "short_desc_too_long": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "The short description is too long. Maximum length is {limit} character. Current: {length}"
    },
    "full_desc_too_long": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "The full description is too long. Maximum length is {limit} character. Current: {length}"
    },
    "tree_level_error": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Cannot add a child under '{parent_type}' ({parent_id}) because it is the last level of the active schema."
    },
    "node_not_found": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Node with ID '{id}' not found."
    },
    "delete_done": {
      "level": "SUCCESS",
      "badge": "OK",
      "color": "green",
      "text": "Deleted node '{target_name}' (ID: {target_id}) from parent {target_parent_id}"
    },
    "delete_root_done": {
      "level": "SUCCESS",
      "badge": "OK",
      "color": "green",
      "text": "Deleted root node '{target_name}' (ID: {target_id})"
    },
    "toggled": {
      "level": "SUCCESS",
      "badge": "OK",
      "color": "green",
      "text": "Toggled '{target_name}' and all descendants from {old_status} to {new_status}."
    },
    "edit_done": {
      "level": "SUCCESS",
      "badge": "OK",
      "color": "green",
      "text": "Updated node {id}: {info}"
    },
    "edit_no_change": {
      "level": "WARN",
      "badge": "WARN",
      "color": "yellow",
      "text": "No changes made to node {id}."
    },
    "search_results": {
      "level": "INFO",
      "badge": "INFO",
      "color": "cyan",
      "text": "Search results ({nmatches}):"
    },
    "search_no_matches": {
      "level": "WARN",
      "badge": "WARN",
      "color": "yellow",
      "text": "No matches."
    }
  },

  "confirmation": {
    "delete_confirm": {
      "level": "HELP",
      "badge": "SYS",
      "color": "cyan",
      "text": "Are you sure you want to delete '{target_name}' (ID: {target_id})? Type: 'confirm delete {target_id}' or 'abort delete' to cancel operation."
    },
    "clearall_confirm": {
      "level": "HELP",
      "badge": "SYS",
      "color": "cyan",
      "text": "Usage: delete <id>"
    },
    "mismatched_id": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Mismatched confirmation ID. Pending: {targets_id}, got: {target_id}"
    },
    "no_pending_confirm": {
      "level": "WARN",
      "badge": "WARN",
      "color": "yellow",
      "text": "No pending confirmation."
    }
  },

  "abort": {
    "delete_aborted": {
      "level": "SUCCESS",
      "badge": "OK",
      "color": "green",
      "text": "Delete of '{target}' aborted."
    },
    "no_pending_delete": {
      "level": "WARN",
      "badge": "WARN",
      "color": "yellow",
      "text": "No delete operation to abort."
    },
    "clearall_aborted": {
      "level": "SUCCESS",
      "badge": "OK",
      "color": "green",
      "text": "Clearall '{target}' aborted."
    },
    "no_pending_clearall": {
      "level": "WARN",
      "badge": "WARN",
      "color": "yellow",
      "text": "No clearall operation to abort."
    },
    "unknown_target_action": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Unknown abort target action: {action}"
    }
  },

  "import": {
    "file_missing": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "No such file in the specified path: {file}"
    },
    "parse_error": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "The format or content of the file '{file}' you are trying to import is incorrect. Only JSON files can be imported. The JSON must be a list of node objects. Details: {error}"
    },
    "invalid_mode": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Incorrect mode: {mode}. Please use 'replace', 'append' or 'merge'."
    },
    "replaced": {
      "level": "SUCCESS",
      "badge": "OK",
      "color": "green",
      "text": "Data replaced with {file} | Removed {removed} and created {created} nodes."
    },
    "appended": {
      "level": "SUCCESS",
      "badge": "OK",
      "color": "green",
      "text": "Data appended from {file}. Created: {created} nodes."
    },
    "merged": {
      "level": "SUCCESS",
      "badge": "OK",
      "color": "green",
      "text": "Data merged with {file}. Updated {updated} and created {created} nodes."
    }
  },

  "export": {
    "success": {
      "level": "SUCCESS",
      "badge": "OK",
      "color": "green",
      "text": "Export successful to {path}. {rows} rows written."
    },
    "invalid_format": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Invalid format: '{format}'. Please use 'csv', 'pdf' or 'json'."
    },
    "export_failed": {
      "level": "ERROR",
      "badge": "ERROR",
      "color": "red",
      "text": "Export {format} {path} failed. Error: {error}"
    }
  },

  "debug": {
    "save_success": {
      "level": "DEBUG",
      "badge": "DEBUG",
      "color": "magenta",
      "text": "SAVE SUCCESSFUL: {file}"
    }
  }
}
